import dearpygui.dearpygui as dpg


WINDOW_NAME = "EditorPerRepo"
DEFAULT_WINDOW_SIZE = (500, 300)


def on_submit_button_press():
    print("ayy")


def on_open_config_press():
    print("open config")


def create_main_gui():
    dpg.create_context()

    with dpg.window(label="asdf", tag="Primary", autosize=True):
        dpg.add_text("Please select an editor to open this repository with:")
        dpg.add_listbox(items=["1", "2", "3", "4", "5"])
        dpg.add_button(label="submit", callback=on_submit_button_press)

    dpg.create_viewport(title=WINDOW_NAME, width=DEFAULT_WINDOW_SIZE[0], height=DEFAULT_WINDOW_SIZE[1])
    dpg.setup_dearpygui()
    dpg.show_viewport()

    dpg.set_primary_window("Primary", True)

    dpg.start_dearpygui()
    dpg.destroy_context()


if __name__ == "__main__":
    create_main_gui()

